@model SuperHerois.Models.ViewModels.HeroiViewModel

@{
    ViewData["Title"] = "Criar Herói";
}

<h1>Criar seu Heroi</h1>

<h4>Adicione as características do seu Herói</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="MeusHerois" asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poder" class="control-label"></label>
                <input asp-for="Poder" class="form-control" />
                <span asp-validation-for="Poder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Meu Heroi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="MeusHerois" asp-action="Index">Back to List</a>
</div>

